# frozen_string_literal: true

source "https://rubygems.org"

gemspec

# GitHub Pages Gem, verwendet für Jekyll-basierte GitHub Pages-Projekte
gem "github-pages", group: :jekyll_plugins

# Faraday Retry Middleware für HTTP-Anfragen (Optional, falls Wiederholungsmechanismus benötigt wird)
gem "faraday-retry" # Optional; nur hinzufügen, wenn du HTTP-Retry-Funktionalität benötigst

# Optional: Hinzufügen von Jekyll-Plugins, die von GitHub Pages unterstützt werden
gem "jekyll-feed", group: :jekyll_plugins
gem "jekyll-seo-tag", group: :jekyll_plugins
gem "jekyll-redirect-from"